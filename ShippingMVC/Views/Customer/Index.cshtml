@model IEnumerable<CustomerResponseModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="page-header">
<h1>List of Candidates</h1>
</div>
@* <a asp-action="Create" asp-controller="Customer">Add New Candidate</a> *@

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Location</th>
            <th colspan="2">Options</th>
        </tr>

    </thead>
    <tbody>
        @{
            foreach (var m in Model)
            {
                <tr>
                <td>
                @m.FirstName
                </td>
                <td>
                @m.LastName
                </td>
                <td>
                @m.Mobile
                </td>
                <td>
                    @m.Email
                </td>
                <td>
                    @m.Location
                </td>
                <td>
                @* <a asp-action="Edit" asp-controller="Customer" asp-route-id="@m.Id" >Edit</a> *@
                </td>
                <td>
                @* <a asp-action="Delete" asp-controller="Customer" asp-route-id="@m.Id">Delete</a> *@
                </td>
                </tr>
            }
        }
    </tbody>
</table>
