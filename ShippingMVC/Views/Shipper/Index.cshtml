@model IEnumerable<ShipperResponseModel>
@{
    ViewData["Title"] = "Shippers";
}

<div class="page-header">
<h1>List of Shippers</h1>
</div>
<a class="btn btn-primary" asp-action="Create" asp-controller="Shipper">Add New Shipper</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Phone</th>
            <th colspan="2">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @m.CompanyName
                </td>
                <td>
                    @m.Mobile
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-controller="Shipper" asp-route-id="@m.Id" >Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Shipper" asp-route-id="@m.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
