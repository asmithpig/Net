@model IEnumerable<ProductResponseModel>
@{
    ViewData["Title"] = "Products";
}

<h1>List of Products</h1>
<div class="main-content">
    <div class="section-content section-content-p30">
        <h4>Category: </h4>
        <hr />
        <div class="container-fluid">
            <div class="row">
                <!-- loop over the collection of products -->
                @foreach (var m in Model)
                {
                    <div class="col-md-3">
                        <div class="product-box">
                            <a href="#">
                                <img src=@m.ImageUrl class="img-responsive" alt="image" />
                            </a>
                            <div style="height: 50px"><h1>@m.ProductName</h1></div>
                            <div class="price">$@m.UnitPrice</div>
                            <button class="btn btn-primary btn-sm">Add to cart</button>
                        </div>
                    </div>
                }
                <!-- if products empty then display a message -->
                @if (Model.ToList().Count == 0)
                {
                    <div class="alert alert-warning col-md-12" role="alert">No products found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
